# ============================================================
# YYC3 AI-Family — Staging Environment (环境 2)
# 启动命令: bun run dev:staging
# 端口: 3114
# 用途: 预发布环境，模拟生产配置
# ============================================================

# --- 应用端口 ---
VITE_APP_PORT=3114
VITE_APP_ENV=staging

# --- NAS (staging: NAS 可在线，降级到 localStorage) ---
VITE_NAS_HOST=192.168.3.45
VITE_NAS_SQLITE_PORT=8484
VITE_NAS_DOCKER_PORT=2375
VITE_HEARTBEAT_WS_HOST=192.168.3.45
VITE_HEARTBEAT_WS_PORT=9090
VITE_HEARTBEAT_WS_PATH=/ws/heartbeat

# --- 集群设备 ---
VITE_DEVICE_M4_MAX=192.168.3.22
VITE_DEVICE_IMAC_M4=192.168.3.77
VITE_DEVICE_MATEBOOK=192.168.3.66
VITE_DEVICE_NAS=192.168.3.45

# --- LLM 提供商密钥（在 UI 设置中配置）---
VITE_OPENAI_API_KEY=
VITE_ANTHROPIC_API_KEY=
VITE_DEEPSEEK_API_KEY=
VITE_ZHIPU_API_KEY=
VITE_GOOGLE_API_KEY=
VITE_GROQ_API_KEY=

# --- 本地 LLM (Ollama 在本地测试) ---
VITE_OLLAMA_HOST=localhost
VITE_OLLAMA_PORT=11434
VITE_LMSTUDIO_HOST=localhost
VITE_LMSTUDIO_PORT=1234

# --- AI 能力增强配置 (staging: 启用高级功能) ---
# 上下文窗口大小（token 数）
VITE_AI_CONTEXT_SIZE=8192
# 温度参数 (0.0-1.0, 越高越创造性)
VITE_AI_TEMPERATURE=0.7
# 流式输出
VITE_AI_STREAMING=true
# 最大重试次数
VITE_AI_MAX_RETRIES=3
# 超时时间（毫秒）
VITE_AI_TIMEOUT=60000
# 函数调用支持
VITE_AI_FUNCTION_CALLING=true

# --- 知识库增强 ---
# 向量搜索阈值
VITE_KB_SIMILARITY_THRESHOLD=0.75
# 最大检索数量
VITE_KB_MAX_RESULTS=10
# 语义缓存
VITE_KB_SEMANTIC_CACHE=true

# --- 应用配置 (staging: 混合策略 + info 日志) ---
VITE_PERSISTENCE_STRATEGY=localStorage
VITE_METRICS_ARCHIVE_INTERVAL=45000
VITE_HEARTBEAT_SIMULATION_INTERVAL=10000
VITE_LOG_LEVEL=info

# --- 后端服务 ---
VITE_API_BASE_URL=http://localhost:3114/api
VITE_WS_URL=ws://localhost:3114/ws

# --- KB 后端服务 (可选) ---
VITE_KB_VECTOR_PORT=8090
VITE_KB_MULTIMODAL_PORT=8091
VITE_KB_NLP_PORT=8092
