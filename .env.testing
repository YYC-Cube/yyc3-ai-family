VITE_OLLAMA_HOST=localhost
VITE_OLLAMA_PORT=11434
VITE_LMSTUDIO_HOST=localhost
VITE_LMSTUDIO_PORT=1234

# --- AI 能力增强配置 (testing: 激进设置) ---
# 上下文窗口大小（最大测试）
VITE_AI_CONTEXT_SIZE=16384
# 温度参数 (高创造性测试)
VITE_AI_TEMPERATURE=0.9
# 流式输出
VITE_AI_STREAMING=true
# 最大重试次数
VITE_AI_MAX_RETRIES=5
# 超时时间（毫秒，较长超时）
VITE_AI_TIMEOUT=120000
# 函数调用支持
VITE_AI_FUNCTION_CALLING=true

# --- 知识库增强 (testing: 最小阈值) ---
# 向量搜索阈值
VITE_KB_SIMILARITY_THRESHOLD=0.5
# 最大检索数量
VITE_KB_MAX_RESULTS=20
# 语义缓存
VITE_KB_SEMANTIC_CACHE=true

# --- 应用配置 (testing: localStorage + debug 日志) ---
VITE_PERSISTENCE_STRATEGY=localStorage
VITE_METRICS_ARCHIVE_INTERVAL=15000
VITE_HEARTBEAT_SIMULATION_INTERVAL=5000
VITE_LOG_LEVEL=debug

# --- 后端服务 (本地测试) ---
VITE_API_BASE_URL=http://localhost:3116/api
VITE_WS_URL=ws://localhost:3116/ws

# --- KB 后端服务 (本地测试) ---
